<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/styles.css">
  <title>Event details</title>
</head>

<style>
.container {
    text-align: center;
}
</style>

<body>
  <nav class="navbar navbar-expand-sm ">
    <div class="container-fluid">
      <a class="navbar-brand" href="index.ejs"><b>TIMELY</b></a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mynavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="mynavbar">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/addEvent">Add New Events</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/resume">Resume</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/clockIn">Clock In</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/clockOut">Past Shifts</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
    
    <div class="container">
        <br>
        <div class="text-center"><h2>Event Details</h2></div>
        <br>
        <% if (work_schedule) { 
          let work_date= new Date(work_schedule.work_date);
          let formattedDOB = work_date.getFullYear() + '-' + ('0' + (work_date.getMonth() + 1)).slice(-2) + '-' + ('0' + work_date.getDate()).slice(-2);
      %>
            <div>
                <p><b>Event Title:</b><br> <%= work_schedule.title%></p>
                <p><b>Work Date:</b><br> <%= formattedDOB %></p>
                <p><b>Start Time: </b><br><%= work_schedule.start_time %></p>
                <p><b>Time: </b><br><%= work_schedule.end_time %></p>
            </div>
        <% } else { %>
            <p>No event found.</p>
        <% } %>
        <a href ="/" class="btn btn-secondary">Back to Home</a>
    </div>
    
</body>
</html>